<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        // colors
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        // Typography
        <item name="textAppearanceHeadline1">@style/TextAppearance.TaskedIn.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TaskedIn.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TaskedIn.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TaskedIn.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TaskedIn.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TaskedIn.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TaskedIn.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TaskedIn.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TaskedIn.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TaskedIn.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TaskedIn.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.TaskedIn.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TaskedIn.Overline</item>

        // Shape
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TaskedIn.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TaskedIn.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TaskedIn.LargeComponent</item>

    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
